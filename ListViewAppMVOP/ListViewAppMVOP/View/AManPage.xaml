<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListViewAppMVOP.AManPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Jméno" HorizontalOptions="CenterAndExpand" Text="{Binding FirstName}" />
            <Entry Placeholder="Příjmení" HorizontalOptions="CenterAndExpand" Text="{Binding SurName}"/>
            <Entry Placeholder="Věk" HorizontalOptions="CenterAndExpand" Text="{Binding Age}"/>
            <Button Text="Uložit" VerticalOptions="End" Clicked="Save_Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>